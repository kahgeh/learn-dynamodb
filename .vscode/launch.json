    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach createUser to SAM CLI",
            "type": "node",
            "request": "attach",
            "address": "localhost",
            "port": 5858,
            "localRoot": "${workspaceRoot}/dist/createUser",
            "remoteRoot": "/var/task",
            "protocol": "inspector",
            "stopOnEntry": false,
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "file:///users/*": "${workspaceRoot}/src/users/*"
            }
        }
    ]
}